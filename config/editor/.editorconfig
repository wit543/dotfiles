# ============================================================================
#                         EDITORCONFIG
#                    github.com/wit543/dotfiles
# ============================================================================
# https://editorconfig.org
# Consistent coding styles across editors and IDEs
# ============================================================================

root = true

# ----------------------------------------------------------------------------
# DEFAULT (all files)
# ----------------------------------------------------------------------------
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# ----------------------------------------------------------------------------
# JAVASCRIPT / TYPESCRIPT / JSON / YAML
# ----------------------------------------------------------------------------
[*.{js,jsx,ts,tsx,json,yml,yaml,css,scss,less,html,vue,svelte}]
indent_size = 2

# ----------------------------------------------------------------------------
# MARKDOWN
# ----------------------------------------------------------------------------
[*.md]
trim_trailing_whitespace = false

# ----------------------------------------------------------------------------
# MAKEFILE (requires tabs)
# ----------------------------------------------------------------------------
[Makefile]
indent_style = tab

[*.mk]
indent_style = tab

# ----------------------------------------------------------------------------
# GO (uses tabs by convention)
# ----------------------------------------------------------------------------
[*.go]
indent_style = tab

# ----------------------------------------------------------------------------
# PYTHON
# ----------------------------------------------------------------------------
[*.py]
indent_size = 4

# ----------------------------------------------------------------------------
# SHELL SCRIPTS
# ----------------------------------------------------------------------------
[*.sh]
indent_size = 4

[*.bash]
indent_size = 4

[*.zsh]
indent_size = 4

# ----------------------------------------------------------------------------
# RUST
# ----------------------------------------------------------------------------
[*.rs]
indent_size = 4

# ----------------------------------------------------------------------------
# TOML
# ----------------------------------------------------------------------------
[*.toml]
indent_size = 2

# ----------------------------------------------------------------------------
# DOCKER
# ----------------------------------------------------------------------------
[Dockerfile*]
indent_size = 4

[docker-compose*.yml]
indent_size = 2

# ----------------------------------------------------------------------------
# GIT
# ----------------------------------------------------------------------------
[.gitattributes]
indent_size = 4

[.gitignore]
indent_size = 4

# ============================================================================
# END OF CONFIGURATION
# ============================================================================
